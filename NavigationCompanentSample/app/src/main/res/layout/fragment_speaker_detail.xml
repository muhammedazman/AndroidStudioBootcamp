<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_16"
    tools:context=".SpeakerDetailFragment">


    <ImageView
        android:id="@+id/imageViewSpeakerDetail"
        android:layout_width="@dimen/img_size_80"
        android:layout_height="@dimen/img_size_80"
        android:layout_marginLeft="@dimen/space_8dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewSpeakerNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginLeft="@dimen/space_16"
        app:layout_constraintStart_toEndOf="@+id/imageViewSpeakerDetail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cafer Mert Ceylan"/>

    <TextView
        android:id="@+id/textViewSpeakerLocationDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_2"
        android:layout_marginLeft="@dimen/space_16"
        app:layout_constraintStart_toEndOf="@id/imageViewSpeakerDetail"
        app:layout_constraintTop_toBottomOf="@id/textViewSpeakerNameDetail"
        tools:text="Istanbul"/>

    <TextView
        android:id="@+id/textViewSpeakerTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:layout_marginLeft="@dimen/space_16"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewSpeakerDetail"
        tools:text="Android Developer @ Dolap"/>

    <TextView
        android:id="@+id/textViewSpeakerDescriptionDetail"
        android:layout_width="@dimen/width_350"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="@dimen/space_16"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSpeakerTitleDetail"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="I'm Okan, an Android developer from Istanbul. I'm studying Computer Engineering at Isik University. I try to improve myself on Android development and try to learn as much as I can and also I have been a volunteer organizer of the GDG Istanbul community for three years."/>


</androidx.constraintlayout.widget.ConstraintLayout>