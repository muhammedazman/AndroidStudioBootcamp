<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpeakerListFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOkan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height_126"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_16"
        app:cardCornerRadius="@dimen/radius_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSpeaker"
                android:layout_width="@dimen/img_size_80"
                android:layout_height="80dp"
                android:src="@drawable/okan"
                android:layout_marginLeft="@dimen/space_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvSpeakerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgSpeaker"
                app:layout_constraintBottom_toTopOf="@id/tvSpeakerTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Okan Aydin"/>

            <TextView
                android:id="@+id/tvSpeakerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_2"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgSpeaker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSpeakerTitle"
                tools:text="Jr.Android Developer @ citizenMe"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMert"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height_126"
        android:layout_gravity="center"
        android:layout_margin="@dimen/space_16"
        app:cardCornerRadius="@dimen/radius_4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSpeaker1"
                android:layout_width="@dimen/img_size_80"
                android:layout_height="80dp"
                android:src="@drawable/mert"
                android:layout_marginLeft="@dimen/space_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvSpeakerName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/space_16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgSpeaker1"
                app:layout_constraintBottom_toTopOf="@id/tvSpeakerTitle1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Cafer Mert Ceylan"/>

            <TextView
                android:id="@+id/tvSpeakerTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginTop="@dimen/space_2"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgSpeaker1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSpeakerTitle1"
                tools:text="Android Developer @ Dolap.com"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>